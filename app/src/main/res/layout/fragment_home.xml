<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Primer cuarto de la pantalla: Barra de búsqueda y filtros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Barra de búsqueda flotante redondeada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_background"
            android:orientation="horizontal">

            <!-- Barra de búsqueda (EditText) -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar..."
                android:inputType="text" />

            <!-- Botón de búsqueda (imagen de lupa) -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Buscar" />
        </LinearLayout>

        <!-- Barra horizontal de filtros (se pueden agregar botones dinámicamente en el código Kotlin) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/filterContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Agrega botones de filtro aquí en el código Kotlin -->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Resto de la pantalla: RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:scrollbars="vertical" />
</LinearLayout>
